.videos .item {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 10rpx;
  padding: 20rpx;
}
.videos .item .title {
  font-weight: 700;
  margin-bottom: 20rpx;
  font-size: 30rpx;
}
.videos .item .title .top {
  border: 1rpx solid #E31D1A;
  font-size: 24rpx;
  margin-right: 18rpx;
  padding: 2rpx 8rpx;
  color: #E31D1A;
  border-radius: 10rpx;
  font-weight: 400;
}
.videos .item .picture {
  background-color: #ccc;
  height: 300rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  position: relative;
}
.videos .item .picture image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.videos .item .picture .icon {
  position: absolute;
  font-size: 80rpx;
  top: 50%;
  margin-top: -40rpx;
  left: 50%;
  margin-left: -40rpx;
  opacity: 0.6
}
.videos .item .item-bottom {
  color: #999;
  display: inline-block;
}
.videos .list-bottom {
  text-align: center;
  color: #999;
  margin-bottom: 20rpx;
}
.fr {
  float: right;
}
